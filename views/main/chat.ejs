<script type="text/javascript" src="/js/underscore.js"></script>
<script type="text/javascript" src="/js/backbone.js"></script>
<div class="form">
	<h1>
		Chat
		<button id='logout'>logout</button><br/>
	</h1>
	<h3>Welcome <%= uname %></h3>
	<form  id='sendForm'>
		<input type='text' autocomplete="off" placeholder="type message" id='text' />
		<button>
			Send
		</button>
	</form>
	<div id="msg">
	
	</div>
</div>
<script>
	var MessageModel = Backbone.Model.extend({
        urlRoot: '/messages',
    });
 
    var MessageCollection = Backbone.Collection.extend({
        url: '/messages',
        model: MessageModel,
		socket: null,
		sync: function(method, model, options){
			this.socket=io.connect();
			this.socket.on("connect",function() {
				this.get("/messages",function(data) {
					model.set(data);
				});
			});
			this.socket.on("message",function(msg) {
				console.log(msg);
				var m = msg.verb;
				if (m === "create") {
					model.add(msg.data);
				}
			});
		}
    });
    _.templateSettings = {
		interpolate : /\{\{(.+?)\}\}/g
	};
    var MessagesView = Backbone.View.extend({
		el: '#msg',
		initialize: function () {
			this.collection.on('add', this.render, this);
			this.render();
		},
		template: _.template("<div><div class='header' ><div class='time'>({{ createdAt }})</div><div class='uname'>{{ uname }} </div></div><div class='text'>{{ message }}</div></div>"),
		render: function () {
			this.$el.html("");
			this.collection.each(function(msg){
				var data=msg.toJSON();
				data.createdAt = new Date(data.createdAt).toLocaleString();
				this.$el.prepend(this.template(data));
			}, this)
		}
	});
	
    var messages = new MessageCollection();
    var mView = new MessagesView({collection: messages});
   	
   	$(function() {
	    messages.fetch();
		$("#text").focus();
		$("#sendForm").submit(function(e) {
			e.preventDefault();
			var text=$("#text").val();
			if(text!="") {
				messages.create({message: text}, {wait: true});
			}
			$("#text").val("");
			$("#text").focus();
		});
		$("#logout").click(function() {
			$.get("/logout",function(res) {
				window.location = "/";
			});
		});
	});
</script>
